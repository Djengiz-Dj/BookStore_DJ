@model IEnumerable<Bookstore.Entities.Category>

<div class="container-fluid">
    <h1 class="text-center text-capitalize"> All Gategories</h1>
    <hr />

    @*<div class="row">
        <div class="col-md-6 p-3 mx-auto">
            <a class="btn btn-success btn-block" asp-action="Create">
                <i class="fas fa-plus-circle"></i>&nbsp;&nbsp; Create
            </a>
        </div>
    </div>

    <h3 class="text-center text-capitalize">Category</h3>*@

    <div class="table-responsive-sm">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr class="table-rows">
                    <th> Id </th>
                    <th> Name </th>
                    <th colspan="2">
                        <a asp-action="Create" class="btn btn-block btn-success">
                            <i class="fas fa-user"></i> &nbsp; Create Category
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
    <tr class="table-rows">
        <td> @Html.DisplayFor(modelItem => category.Id) </td>
        <td> @Html.DisplayFor(modelItem => category.Name) </td>
        <td>
            <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-secondary btn-block">
                <i class="fas fa-edit"></i> &nbsp; &nbsp; Edit
            </a>
            <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-info btn-block">
                <i class="fas fa-info"></i> &nbsp; &nbsp; Details
            </a>
            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-block">
                <i class="fas fa-trash"></i> &nbsp; &nbsp; Delete
            </a>
        </td>
    </tr>
       }
            </tbody>
        </table>
        </div>
    </div>
